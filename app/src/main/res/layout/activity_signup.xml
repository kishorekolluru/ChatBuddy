<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raviteja.chat_buddy.SignupActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstName_EditScreen"
        android:hint="FirstName"
        android:layout_below="@+id/profileimage_EditActivity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastname_EditScreen"
        android:hint="LastName"
        android:layout_below="@+id/firstName_EditScreen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_EditScreen"
        android:hint="UserName"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lastname_EditScreen" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_EditScreen"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_above="@+id/confirmpassword_EditScreen"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/confirmpassword_EditScreen" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmpassword_EditScreen"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_above="@+id/updateButton_EditScreen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:id="@+id/updateButton_EditScreen"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/profileimage_EditActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelButton_signupScreen"
        android:layout_marginEnd="67dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/confirmpassword_EditScreen"
        android:layout_alignEnd="@+id/confirmpassword_EditScreen" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/profileimage_EditActivity"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/images" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/textView"
        android:layout_below="@+id/username_EditScreen"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/password_EditScreen"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:checkedButton="@+id/Male_EditScreen"
        android:id="@+id/GenderRG">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Male_EditScreen"
            android:text="Male" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/Female" />
    </RadioGroup>

</RelativeLayout>
