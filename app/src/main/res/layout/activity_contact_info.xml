<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raviteja.chat_buddy.ContactInfoActivity">

    <ImageView
        app:srcCompat="@drawable/images"
        android:layout_marginTop="25dp"
        android:id="@+id/info_image_incon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:text="First Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_image_incon"
        android:layout_toStartOf="@+id/info_image_incon"
        android:layout_marginTop="35dp"
        android:id="@+id/info_fname_tv" />

    <TextView
        android:text="Last Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_fname_tv"
        android:layout_alignEnd="@+id/info_fname_tv"
        android:layout_marginTop="29dp"
        android:id="@+id/info_lname_tv" />

    <TextView
        android:text="Email Id:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_lname_tv"
        android:layout_alignStart="@+id/info_lname_tv"
        android:layout_marginTop="30dp"
        android:id="@+id/info_email_tv" />

    <TextView
        android:text="Gender:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_email_tv"
        android:layout_alignStart="@+id/info_email_tv"
        android:layout_marginTop="31dp"
        android:id="@+id/info_gender_tv" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/info_lname_tv"
        android:layout_marginBottom="53dp"
        android:id="@+id/info_done_button" />

    <TextView
        android:text="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_fname_edit"
        android:layout_alignBaseline="@+id/info_fname_tv"
        android:layout_alignBottom="@+id/info_fname_tv"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/com_facebook_send_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_lname_edit"
        tools:text="text"
        android:layout_alignBaseline="@+id/info_lname_tv"
        android:layout_alignBottom="@+id/info_lname_tv"
        android:layout_alignStart="@+id/info_fname_edit" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_email_edit"
        tools:text="text"
        android:layout_alignBaseline="@+id/info_email_tv"
        android:layout_alignBottom="@+id/info_email_tv"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_gender_edit"
        tools:text="text"
        android:layout_alignBaseline="@+id/info_gender_tv"
        android:layout_alignBottom="@+id/info_gender_tv"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
